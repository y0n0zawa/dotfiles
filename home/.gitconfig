[ghq]
  root = ~/src
[alias]
  alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort
  b = branch -a
  br = browse-remote
  ci = commit
  co = checkout
  d = diff
  delete-merged-branches = !git branch --merged | grep -vE \"^\\*|master$|develop$\" | xargs -I % git branch -d %
  dc = diff --cached
  di = diff
  dic = diff --cached
  f = fetch --prune
  fs = !git f && git su
  gv = "!f(){ git grep -n $* | peco | awk -F: '{print $1}' | xargs -I% bash -c 'vim "%" <&- <&2'; };f"
  ignore = !([ ! -e .gitignore ] && touch .gitignore) | echo $1 >> .gitignore
  info = remote show origin
  l = log --graph -n 20 --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(green)- %an, %cr%Creset'
  ll = log --stat --abbrev-commit
  ln = log --graph -n 20 --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(green)- %an, %cr%Creset' --name-status
  lp = log --oneline -n 20 -p
  ls = log --stat --abbrev-commit -n 1 # display previous log
  revision = !git show -s --format=%H
  s = status --short --branch
  st = status
  su = submodule update
  show-pull-request = "!f() { git log --merges --oneline --reverse --ancestry-path $1...master | grep 'Merge pull request #' | head -n 1; }; f"
[core]
  editor = nvim
  excludesfile = ~/.gitignore_global
[include]
  path = ./.gitconfig_local
